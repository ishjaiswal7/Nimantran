<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Nimantran" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryVariant">@color/primaryDarkColor</item>
        <item name="colorOnPrimary">@color/primaryTextColor</item>

        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/secondaryColor</item>
        <item name="colorSecondaryVariant">@color/secondaryDarkColor</item>
        <item name="colorOnSecondary">@color/secondaryTextColor</item>


        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.Nimantran.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.Nimantran.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.Nimantran.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="Theme.Nimantran.Fullscreen" parent="Theme.Nimantran">
        <item name="android:actionBarStyle">@style/Widget.Theme.Nimantran.ActionBar.Fullscreen
        </item>
        <item name="android:windowActionBarOverlay">true</item>
        <item name="android:windowBackground">@null</item>
    </style>

    <style name="ThemeOverlay.Nimantran.FullscreenContainer" parent="">
        <item name="fullscreenBackgroundColor">@color/primaryLightColor</item>
        <item name="fullscreenTextColor">@color/primaryTextColor</item>
    </style>
    
    <style name="RoundCorner" parent=""> <!-- This is the style for Users list item -->
        <item name="cornerFamily">rounded</item>

        <item name="cornerSize">10dp</item>

        <item name="color">@android:color/white</item>
    </style>
</resources>